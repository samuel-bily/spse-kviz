<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bily.samuel.kviz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bily.samuel.kviz.LoginActivity" android:windowSoftInputMode="adjustNothing" android:theme="@style/AppTheme.NoTittleBar"/>
        <activity android:name="com.bily.samuel.kviz.RegisterActivity" android:windowSoftInputMode="adjustNothing" android:theme="@style/AppTheme.NoTittleBar"/>
        <activity
            android:name="com.bily.samuel.kviz.QuizActivity"
            android:clearTaskOnLaunch="true"
            android:parentActivityName="com.bily.samuel.kviz.MainActivity" />
        <activity
            android:name="com.bily.samuel.kviz.MainActivity"
            android:label="@string/MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bily.samuel.kviz.QuestionActivity" />
        <activity android:name="com.bily.samuel.kviz.QuestionAnsweredActivity" />
        <activity
            android:name="com.bily.samuel.kviz.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.bily.samuel.kviz.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bily.samuel.kviz.MainActivity" />
        </activity>
        <activity android:name="com.bily.samuel.kviz.AboutActivity"
            android:parentActivityName="com.bily.samuel.kviz.MainActivity" ></activity>
    </application>

</manifest>
